---
import Typography from './typography.astro';
import formatDateRangeEn from '@/utils/format-date-range_eng';
import formatDateRangeEs from '@/utils/format-date-range_esp';

const { dates } = Astro.props;

// Obtener el idioma almacenado en localStorage o usar 'es' por defecto
const lang = typeof window !== 'undefined' && localStorage.getItem('lang') === 'eng' ? 'eng' : 'es';

// Seleccionar la función correcta según el idioma
const formatDateRange = lang === 'es' ? formatDateRangeEn : formatDateRangeEs;
---

<Typography variant="item-subtitle-secondary">
  {formatDateRange(dates)}
</Typography>
